---
import '@/styles/global.css'
import '@/styles/typography.css'

import Footer from '@/components/Footer.astro'
import Head from '@/components/Head.astro'
import Header from '@/components/Header.astro'
import { SITE } from '@/consts'
import { cn } from '@/lib/utils'

interface Props {
  class?: string
}

const { class: className } = Astro.props
import { ClientRouter } from 'astro:transitions'

const hasSidebar = Astro.slots.has('sidebar')
---

<!doctype html>
<html
  class="bg-background text-foreground scheme-light-dark"
  lang={SITE.locale}
>
  <Head>
    <slot name="head" />
    <ClientRouter />
  </Head>
  <body class="flex h-fit min-h-screen flex-col gap-y-6 font-sans">
    <header
      class="bg-background/50 sticky top-0 z-50 divide-y backdrop-blur-sm xl:divide-none"
    >
      <Header />
      <slot name="subposts-navigation" />
      <slot name="table-of-contents" />
    </header>
    <main
      class={cn(
        'w-full mx-auto px-4 py-8',
        hasSidebar ? 'grid grid-cols-1 lg:grid-cols-12 gap-8' : '',
        className,
      )}
    >
      <div class={cn('flex flex-col gap-y-6', hasSidebar ? 'lg:col-span-8' : 'w-full')}>
        <slot />
      </div>
      {
        hasSidebar && (
          <aside class="hidden space-y-8 lg:block lg:col-span-4">
            <div class="sticky top-24 space-y-8">
              <slot name="sidebar" />
            </div>
          </aside>
        )
      }
    </main>
    <Footer />
  </body>
</html>
