---
import Link from '@/components/Link.astro'
import { Badge } from '@/components/ui/badge'
import { formatDate } from '@/lib/utils'
import { Icon } from 'astro-icon/components'
import { Image } from 'astro:assets'
import type { CollectionEntry } from 'astro:content'

interface Props {
  project: CollectionEntry<'albums'>
}

const { album } = Astro.props
const formattedDate = formatDate(album.data.date)
---

<div
  class="hover:bg-secondary/50 rounded-xl border p-4 sm:h-auto lg:h-full transition-colors duration-300 ease-in-out"
>
  <Link
    href={`/gallery/${album.id}`}
    class="flex gap-4 sm:flex-row md:flex-col"
  >
    {
      album.data.cover && (
        <div class="h-1/3 w-auto">
          <Image
              src={album.data.cover}
              alt={album.data.coverAlt}
              format="avif"
              quality="mid"
              class:list={[
                "object-cover h-48 w-96 object-bottom",
                "group-hover:shadow-lg group-hover:opacity-90"
              ]}
            />
        </div>
      )
    }
    <div class="grow">
      <div
      class="mb-2 flex flex-wrap gap-x-2 justify-between"
    >
      <h3 class="text-xl font-medium capitalize">
        {album.data.title}
      </h3>
      {
        album.data.pubDate && (
          <p class="text-muted-foreground/70 px-1 flex items-center gap-x-1.5 text-xs">
            <span class="flex items-center gap-x-1.5">
              <Icon name="lucide:calendar" class="size-3" />
              <span>
                {formatDate(album.data.pubDate)}
                
              </span>
            </span>
          </p>
        )
      }
      </div>
      <p class="text-muted-foreground mb-2 text-sm">
        {album.data.description}
      </p>
    </div>
  </Link>
</div>
