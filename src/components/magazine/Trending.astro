---
import { getRecentPosts } from '@/lib/data-utils'
import { Image } from 'astro:assets'

const trendingPosts = await getRecentPosts(5)
const [topPost, ...otherPosts] = trendingPosts
---

<div class="flex flex-col gap-6">
  <div class="rounded-xl border bg-card p-4">
    <h3 class="mb-4 text-lg font-bold flex items-center gap-2">
      <span class="text-primary">#</span> Trending Now
    </h3>
    <ul class="flex flex-col gap-4">
        {otherPosts.map((post, index) => (
            <li class="flex items-start gap-3 group">
                <span class="text-2xl font-bold text-muted-foreground/30 leading-none mt-1 group-hover:text-primary transition-colors">{index + 1}</span>
                <div>
                   <a href={`/blog/${post.slug}`} class="font-medium leading-snug hover:text-primary transition-colors line-clamp-2">
                    {post.data.title}
                   </a> 
                   <span class="text-xs text-muted-foreground mt-1 block">{post.data.date.toLocaleDateString()}</span>
                </div>
            </li>
        ))}
    </ul>
  </div>
</div>
