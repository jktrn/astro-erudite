---
import Link from '@/components/Link.astro'
import ThemeToggle from '@/components/ThemeToggle.astro'
import { NAV_LINKS, SITE } from '@/consts'
import { Image } from 'astro:assets'
import logo from '../../public/static/logo.svg'
import { ReadingProgress } from '@/components/magazine/ReadingProgress'

const { pathname } = Astro.url
const isBlogPost = pathname.startsWith('/blog/') && pathname !== '/blog/'
---

<div class="relative">
  <div
    class="mx-auto flex max-w-7xl items-center justify-between gap-4 px-4 py-3"
  >
    <Link href="/" class="group flex shrink-0 items-center justify-center gap-0.5 font-mono text-2xl font-black tracking-tighter transition-transform hover:scale-105">
      <span class="bg-linear-to-r from-pink-500 to-rose-600 bg-clip-text text-transparent [text-shadow:0_0_20px_rgba(236,72,153,0.5)]">
        ASTRO
      </span>
      <span class="bg-linear-to-r from-cyan-500 to-blue-600 bg-clip-text text-transparent [text-shadow:0_0_20px_rgba(6,182,212,0.5)]">
        NOMEER
      </span>
    </Link>
    <div class="flex items-center gap-4">
      <nav class="flex items-center gap-4 text-sm sm:gap-6">
        {
          NAV_LINKS.map((item) => (
            <Link
              href={item.href}
              class="text-foreground/60 hover:text-foreground capitalize transition-colors"
            >
              {item.label}
            </Link>
          ))
        }
      </nav>
      <ThemeToggle transition:persist />
    </div>
  </div>
  {isBlogPost && <ReadingProgress client:load />}
</div>
