---
import Breadcrumbs from '@/components/Breadcrumbs.astro'
import Link from '@/components/Link.astro'
import PageHead from '@/components/PageHead.astro'
import { badgeVariants } from '@/components/ui/badge'
import Layout from '@/layouts/Layout.astro'
import { getSortedFandoms } from '@/lib/data-utils'
import { Icon } from 'astro-icon/components'

const sortedFandoms = await getSortedFandoms()
---

<Layout class="max-w-3xl">
  <PageHead slot="head" title="Fandoms" />
  <Breadcrumbs items={[{ label: 'Fandoms', icon: 'lucide:star' }]} />

  <div class="flex flex-col gap-4">
    <div class="flex flex-wrap gap-2">
      {
        sortedFandoms.map(({ fandom, count }) => (
          <Link
            href={`/fandoms/${fandom}`}
            class={badgeVariants({ variant: 'muted' })}
          >
            <Icon name="lucide:hash" class="size-3" />
            {fandom}
            <span class="text-muted-foreground ml-1.5">({count})</span>
          </Link>
        ))
      }
    </div>
  </div>
</Layout>
