---
import BlogCard from '@/components/BlogCard.astro'
import Link from '@/components/Link.astro'
import PageHead from '@/components/PageHead.astro'
import { buttonVariants } from '@/components/ui/button'
import { SITE } from '@/consts'
import Layout from '@/layouts/Layout.astro'
import { Image } from 'astro:assets'
import { getRecentPosts } from '@/lib/data-utils'

const blog = await getRecentPosts(SITE.featuredPostCount)
---

<Layout>
  <PageHead slot="head" title="Home" />
  <section>
    <div class="card-offset mx-0">
      <div class="flex flex-col space-y-1.5 p-6 pb-4">

        <h3 class="text-3xl leading-none font-bold text-accent-foreground">Hi, I'm Brendan</h3>
        <p class="text-muted-foreground text-sm">
          Mechanical Engineer | Process Automation | Textile Engineering
        </p>
      </div>
      <div class="p-6 pt-0 pb-4">
        <p class="mb-2 text-sm">
          I believe we stop living when we stop learning. Iâ€™m a mechanical engineer by trade with a passion for product design, factory automation, and sustainability.
        </p>
      </div>
    </div>
  </section>
  <section class="flex flex-col gap-y-4">
    <h2 class="text-2xl font-medium ">Latest posts</h2>
    <ul class="flex flex-col gap-y-4">
      {
        blog.map((post) => (
          <li>
            <BlogCard entry={post} />
          </li>
        ))
      }
    </ul>
    <div class="flex justify-center">
      <Link
        href="/blog"
        class={buttonVariants({ variant: 'ghost' }) + ' group'}
      >
        See all posts <span
          class="ml-1.5 transition-transform group-hover:translate-x-1"
          >&rarr;</span
        >
      </Link>
    </div>
  </section>
</Layout>
